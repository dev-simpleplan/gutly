{% case media.media_type %}
  {% when 'image' %}
  <img
    src="{{ media | img_url: "master"}}"
    alt="{{ media.preview_image.alt }}"
    class="img">
  {% when 'external_video' %}
  {{ media | external_video_tag: class: "img" }}
  {% when 'video' %}
  {{ media | video_tag: controls: true, class: "img" }}
  {% when 'model' %}
  {{ media | model_viewer_tag }}
{% else %}
  {{ media | media_tag }}
{% endcase %}