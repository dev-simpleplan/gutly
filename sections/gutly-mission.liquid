<section class="pad-180">
  <div class="container">
    <div class="gutly-mission-wrapper">
      <div class="gmw-txt trans">
        <div class="head over-hid">
          <h3 class="trans-first">{{ section.settings.head }}</h3>
        </div>
        <div class="para over-hid">
          <p class="trans-sec">{{ section.settings.para }}</p>
        </div>
        <div class="cta over-hid trans-third">
          <a href="{{ section.settings.cta_link.url }}" class="primary-button yellow-black">{{ section.settings.cta_text }}</a>
        </div>
      </div>
      <div class="gmw-img trans">
        <img
          src="{{ section.settings.image | img_url: "master" }}"
          alt=""
          class="img trans-img">
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Gutly Mission",
    "settings": [
      {
        "type": "text",
        "id": "head",
        "label": "Section Heading"
      },
      {
        "type": "text",
        "id": "para",
        "label": "Section Paragraph"
      },
      {
        "type": "text",
        "id": "cta_text",
        "label": "Section CTA Text"
      },
      {
        "type": "page",
        "id": "cta_link",
        "label": "Section CTA Link"
      }, {
        "type": "image_picker",
        "id": "image",
        "label": "Section Image"
      }
    ]
  }
{% endschema %}