<section class="pad-180">
  <div class="container">
    <div class="heading center no-if trans over-hid">
      <h2 class="trans-first">{{ section.settings.head }}</h2>
    </div>
    <div class="no-if-no-but">
      <div class="mid-img mob">
        <div class="prod-img">
          <img
            src="{{ section.settings.image |  img_url: 'master' }}"
            alt=""
            class="img">
        </div>
        <div class="ticker mob">
          <div class="infiniteslide flex">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'ticker' %}
                <a href="#grab-section">
                  <div class="item">
                    <img src="{{ block.settings.tickerImage | img_url: "master" }}" alt="">
                    <p>{{ block.settings.tickerText }}</p>
                  </div>
                </a>
              {% endcase %}
            {% endfor %}
          </div>
        </div>
      </div>
      <div class="left-txt no-if-txt">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'leftGrid' %}
            <div class="ninb-item">
              <div class="ninb-head">
                <p class="small">{{ block.settings.head1 }}</p>
              </div>
              <div class="ninb-para">
                <p>{{ block.settings.para1 }}</p>
              </div>
            </div>
          {% endcase %}
        {% endfor %}
      </div>
      <div class="mid-img">
        <div class="prod-img">
          <img
            src="{{ section.settings.image |  img_url: 'master' }}"
            alt=""
            class="img">
        </div>
      </div>
      <div class="right-txt no-if-txt">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'rightGrid' %}
            <div class="ninb-item">
              <div class="ninb-head">
                <p class="small">{{ block.settings.head2 }}</p>
              </div>
              <div class="ninb-para">
                <p>{{ block.settings.para2 }}</p>
              </div>
            </div>
          {% endcase %}
        {% endfor %}
      </div>
      <div class="ticker">
        <div class="infiniteslide flex">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'ticker' %}
              <a href="#grab-section">
                <div class="item">
                  <img src="{{ block.settings.tickerImage | img_url: "master" }}" alt="">
                  <p>{{ block.settings.tickerText }}</p>
                </div>
              </a>
            {% endcase %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "No If No But",
    "settings": [
      {
        "type": "text",
        "id": "head",
        "label": "Section Heading"
      }, {
        "type": "image_picker",
        "id": "image",
        "label": "Product Image"
      }
    ],
    "blocks": [
      {
        "name": "Left grid",
        "type": "leftGrid",
        "limit": 3,
        "settings": [
          {
            "type": "text",
            "id": "head1",
            "label": "Left Headings"
          }, {
            "type": "text",
            "id": "para1",
            "label": "Left Paragraph"
          }
        ]
      }, {
        "name": "Right grid",
        "type": "rightGrid",
        "limit": 3,
        "settings": [
          {
            "type": "text",
            "id": "head2",
            "label": "Right Headings"
          }, {
            "type": "text",
            "id": "para2",
            "label": "Right Paragraph"
          }
        ]
      }, {
        "name": "Ticker",
        "type": "ticker",
        "settings": [
          {
            "type": "image_picker",
            "id": "tickerImage",
            "label": "Ticker Image"
          }, {
            "type": "text",
            "id": "tickerText",
            "label": "Ticker Text"
          }
        ]
      }
    ]
  }
{% endschema %}
<script type="text/javascript">
  $(function(){
  $('.infiniteslide').infiniteslide({
                                'speed': 50, 
                                'direction': 'left', //choose  up/down/left/right
                                'pauseonhover': true, //if true,stop onmouseover
                                'responsive': false, //width/height recalculation on window resize. child element's width/height define %/vw/vh,this set true.
                                'clone': 4 //if child elements are too few (elements can't "infinite"), set 2 or over.
                              });
                            });</script>