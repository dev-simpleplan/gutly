<section class="pad-180">
  <div class="container">
    {% for item in product.metafields.custom.sample_product.value %}
      <div class="prod-sample-section heading center">
        <div class="head">
          <h2>{{ item.heading }}</h2>
        </div>
        <div class="para">
          <p>{{ item.paragraph }}</p>
        </div>
        <div class="cta">
          <a href="#" class="primary-button yellow-black">
            try today
          </a>
        </div>
        <div class="prod-sample-image">
          <img
            src="{{ item.sample_image | img_url: 'master' }}"
            alt=""
            class="img">
        </div>
      </div>
    {% endfor %}
  </div>
</section>