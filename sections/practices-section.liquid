<section class="pad-180">
  <div class="container">
    <div class="practices-section">
      <div class="ps-left trans">
        <img
          src="{{ section.settings.sectionImage | img_url: 'master' }}"
          alt=""
          class="img trans-img">
      </div>
      <div class="ps-right trans">
        <div class="head over-hid">
          <h3 class="trans-first">{{ section.settings.head }}</h3>
        </div>
        <div class="para-wrap">
          {% for block in section.blocks %}
            <div class="para over-hid">
              <p class="trans-sec">
                {{ block.settings.para }}
              </p>
            </div>
          {% endfor %}
        </div>
        <div class="cta trans-third">
          <a href="{{ section.settings.cta_link.url }}" class="primary-button yellow-black">{{ section.settings.cta_txt }}</a>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Practices Section",
    "settings": [
      {
        "type": "image_picker",
        "id": "sectionImage",
        "label": "Section Image"
      }, {
        "type": "text",
        "id": "head",
        "label": "Section Heading"
      }, {
        "type": "text",
        "id": "cta_txt",
        "label": "Text For Cta"
      }, {
        "type": "page",
        "id": "cta_link",
        "label": "Choose Page for Redirection"
      }
    ],
    "blocks": [
      {
        "type": "practiceParagraph",
        "name": "Practice Paragraph",
        "settings": [
          {
            "type": "text",
            "id": "para",
            "label": "Practice Paragraphs"
          }
        ]
      }
    ]
  }
{% endschema %}