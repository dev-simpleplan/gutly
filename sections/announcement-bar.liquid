  {
    "name": "Announcement Bar",
    "settings": [
      {
        "type": "text",
        "id": "text1",
        "label": "Text 1",
        "default": "FREE SHIPPING OVER $50."
      }, {
        "type": "text",
        "id": "text2",
        "label": "Text 2",
        "default": "FREE SHIPPING OVER $50."
      }, {
