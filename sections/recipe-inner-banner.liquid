<section class="recipe-inner-banner">
  <div class="rib-wrapper">
    <div class="rib-text-wrapper">
      <div class="container">
        <div class="rib-text">
          <div class="sub-head">
            <p>New recipe</p>
          </div>
          <div class="head">
            <h1>{{ article.title }}</h1>
          </div>
          <div class="para">
            <p>{{ article.content }}</p>
          </div>
          <div class="author">
            <p>by:
              <span class="autor">{{ article.author }}</span>
              <span class="date">
                <time datetime="{{ article.published_at | date: '%B %d, %Y' }}">{{ article.published_at | date: '%B %d, %Y' }}</time>
              </span>
            </p>
          </div>
        </div>
      </div>
    </div>
    <div class="riv-img">
      <div class="rivi-img">
        <img
          src="{{ article.image | img_url: 'master' }}"
          alt=""
          class="img">
      </div>
    </div>
  </div>
</section>