    "name": "Parallax Slides",
    "blocks": [
      {
        "type": "parallaxSlide",
        "name": "Parallax Slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "imgLink",
            "label": "Slide Image"
          }, {
            "type": "text",
            "id": "headText",
            "label": "Slide Heading"
          }, {
